{
  "name": "json-helper",
  "description": "JSON helper",
  "version": "4.1.0",
  "main": "json-helper.js",
  "keywords": [
    "json",
    "helper",
    "fs"
  ],
  "author": "vlad309523",
  "license": "MIT",
  "readme": "README.md",
  "repository": "https://github.com/vlad309523/json-helper",
  "dependencies": {
    "bluebird": "^3.5.1"
  },
  "scripts": {
    "api": "node ./api/bin/www",
    "lint": "eslint --ext json --ext js .",
    "lint:fix": "eslint --ext json --ext js --fix .",
    "jsdoc": "jsdoc2md --configure .jsdocconfig json-helper.js",
    "jsdoc:readme": "jsdoc2md --template README.hbs --configure .jsdocconfig json-helper.js > README.md",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.7.2",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-json": "^1.2.0",
    "husky": "^0.14.3",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-to-markdown": "^3.0.0",
    "lint-staged": "^4.2.3"
  },
  "engines": {
    "npm": ">=5",
    "node": ">=8.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "extends": "eslint-config-airbnb-base",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "script",
      "allowImportExportEverywhere": false,
      "codeFrame": false
    },
    "plugins": [
      "json"
    ],
    "root": true,
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "class-methods-use-this": "off",
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "max-len": [
        "error",
        160
      ],
      "no-await-in-loop": "off",
      "no-bitwise": "off",
      "no-loop-func": "off",
      "no-mixed-operators": "warn",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-plusplus": "off",
      "no-restricted-syntax": "off",
      "no-shadow": "warn",
      "no-tabs": "off",
      "prefer-destructuring": [
        "error",
        {
          "AssignmentExpression": {
            "array": false,
            "object": false
          },
          "VariableDeclarator": {
            "array": true,
            "object": true
          }
        },
        {
          "enforceForRenamedProperties": false
        }
      ],
      "radix": "off",
      "space-unary-ops": [
        "error",
        {
          "overrides": {
            "!": true,
            "!!": true
          }
        }
      ],
      "strict": [
        "error",
        "never"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint "
    ],
    "*.json": [
      "eslint --ext json "
    ]
  }
}
